{
  "name": "nosubvod-desktop",
  "version": "0.1.0",
  "description": "Bypass sub-only VODs and stream to local network with streamer subscriptions",
  "author": "Theorhd",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:renderer\" \"npm run dev:portal\"",
    "dev:backend": "tsup --watch --onSuccess \"electron dist/main.js --dev\"",
    "dev:renderer": "vite -c src/renderer/vite.config.ts",
    "dev:portal": "vite -c src/portal/vite.config.ts",
    "build": "npm run build:backend && npm run build:renderer && npm run build:portal",
    "build:backend": "tsup",
    "build:renderer": "vite build -c src/renderer/vite.config.ts",
    "build:portal": "vite build -c src/portal/vite.config.ts",
    "start": "electron dist/main.js",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "type-check": "tsc --noEmit",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -w"
  },
  "build": {
    "appId": "com.nosubvod.desktop",
    "productName": "NoSubVOD",
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "files": [
      "dist/**/*",
      "icon.ico"
    ]
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "ip": "^2.0.1",
    "node-cache": "^5.1.2",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/ip": "^1.1.3",
    "@types/node": "^25.3.2",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1"
  }
}
